extends base

block content
  .row.mb-2.mt-4
    .col-sm-4
    .col-sm-4.mt-4
      form.mt-4#loginForm
        h1.h3.mb-3.fw-normal.text-center Please Login
        .form-floating.mt-2
        .form-floating.mt-2
          input#email.form-control(type='email' name='email' placeholder='name@example.com')
          label(for='email') Email address
        .form-floating.mt-2
          input#password.form-control(type='password' name='password' placeholder='Enter a password')
          label(for='password') Password
        .form-floating.mt-2
        
        button.w-100.btn.btn-lg.btn-primary.mt-2(type='submit') Sign in
    .col-sm-4